<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:minHeight="@dimen/len_H_listitem_stocklist" >

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/len_M_horizontal">
        
        <TextView
	        android:id="@+id/item_tv_stockname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="--"
	        android:textColor="@color/t1"
	        android:textSize="@dimen/txt_s6" />
        
        <TextView
	        android:id="@+id/item_tv_stockcode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="--"
	        android:textColor="@color/t4"
	        android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="--"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6"
        android:textStyle="bold" />
    
    <FrameLayout
        android:id="@+id/page_rank_stock_listitem_click_area"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/len_M_horizontal" >

        <TextView
            android:id="@+id/item_tv_zdf"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:singleLine="true"
            android:ellipsize="none"
            android:background="@drawable/shape_bg_c1_radius"
            android:gravity="center"
            android:textColor="@color/t8"
            android:textSize="@dimen/txt_s6"
             />
    </FrameLayout>

</RelativeLayout>