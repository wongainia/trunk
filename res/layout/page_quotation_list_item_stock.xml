<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/page_quotation_list_item_stockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s6" />

        <TextView
            android:id="@+id/page_quotation_list_item_stockcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/t4"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <TextView
        android:id="@+id/page_quotation_list_item_stockprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="--"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/page_quotation_list_item_stockzdf"
        android:layout_width="@dimen/zdf_bg_width"
        android:layout_height="@dimen/zdf_bg_height"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:gravity="center"
        android:text="--"
        android:textSize="@dimen/txt_s6"
        android:textColor="@color/t8" />
    
    <View 
        android:layout_width="1dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"/>
    
    <View 
        android:id="@+id/page_quotation_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_line_divider"/>

</RelativeLayout>
