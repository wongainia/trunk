<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selector_push_msg_item_alert" >

        <TextView
            android:id="@+id/page_push_msg_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s3" />

        <TextView
            android:id="@+id/page_push_msg_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/page_push_msg_item_time"
            android:layout_alignBaseline="@id/page_push_msg_item_time"
            android:layout_marginLeft="12dp"
            android:textColor="@color/c3"
            android:textSize="@dimen/txt_s3" />

        <TextView
            android:id="@+id/page_push_msg_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/page_push_msg_item_title"
            android:layout_alignBaseline="@id/page_push_msg_item_time"
            android:layout_marginLeft="6dp"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s3" />

        <TextView
            android:id="@+id/page_push_msg_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_push_msg_item_time"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s5" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/page_push_msg_item_content"/>
    </RelativeLayout>

</LinearLayout>