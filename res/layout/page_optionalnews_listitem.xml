<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item" >
    
    <View 
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    
    <LinearLayout 
        android:id="@+id/layout_left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="74dp"
        android:layout_below="@id/top_line"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_bg_c1_radius">
        
        <TextView 
            android:id="@+id/page_optionalnews_listitem_tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_s5"
            android:textColor="@color/t8"/>
        
        <TextView 
            android:id="@+id/page_optionalnews_listitem_tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_s3"
            android:textColor="@color/t8"/>
        
        <TextView 
            android:id="@+id/page_optionalnews_listitem_tv_stock_zdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_s6"
            android:textColor="@color/t8"/>
        
    </LinearLayout>
    
    <View 
        android:id="@+id/bottom_line"
        android:layout_below="@id/layout_left_container"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    
    <TextView 
        android:id="@+id/page_optionalnews_listitem_tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_left_container"
        android:layout_below="@id/top_line"
        android:paddingRight="8dp"
        android:textSize="@dimen/txt_s6"
        android:textColor="@color/t1"/>
    
    <TextView 
        android:id="@+id/page_optionalnews_listitem_tv_news_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_left_container"
        android:layout_above="@id/bottom_line"
        android:textColor="@color/t4"
        android:textSize="@dimen/txt_s2"/>
    
    <TextView 
        android:id="@+id/page_optionalnews_listitem_tv_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/page_optionalnews_listitem_tv_news_type"
        android:layout_marginLeft="12dp"
        android:layout_above="@id/bottom_line"
        android:textColor="@color/t4"
        android:textSize="@dimen/txt_s2"/>
    
    <ImageView 
        android:id="@+id/page_optionalnews_listitem_img_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_above="@id/bottom_line"
        android:src="@drawable/img_news_horn_playing"/>

</RelativeLayout>
