<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_H_listitem_singleline"
    android:background="@drawable/selector_list_item"
    android:minHeight="@dimen/len_H_listitem_singleline" >

    <TextView
        android:id="@+id/page_quote_listitem_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:textColor="@color/t4"
        android:textSize="@dimen/txt_s2" />

    <TextView
        android:id="@+id/page_quote_listitem_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/page_quote_listitem_tv_time"
        android:layout_toRightOf="@id/page_quote_listitem_tv_time"
        android:singleLine="true"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6" />

</RelativeLayout>