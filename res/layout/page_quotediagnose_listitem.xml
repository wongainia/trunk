<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout 
        android:id="@+id/page_quotediagnose_listitem_layout_level"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <TextView 
            android:id="@+id/page_quotediagnose_listitem_tv_grade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/shape_quote_level_oval"
            android:textSize="@dimen/txt_s9"
            android:textColor="@color/t8"/>
        
        <TextView 
            android:id="@+id/page_quotediagnose_listitem_tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_s5"
            android:textColor="@color/t2"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/page_quotediagnose_listitem_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout 
            android:id="@+id/layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
		    android:layout_marginLeft="24dp"
		    android:layout_marginRight="16dp"
		    android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:id="@+id/page_quotediagnose_listitem_img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
		        android:id="@+id/page_quotediagnose_listitem_tv_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="4dp"
		        android:textColor="@color/t1"
		        android:textSize="@dimen/txt_s3"/>
        </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/page_quotediagnose_listitem_tv_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/layout_icon"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="12dp"
	        android:lineSpacingMultiplier="1.3"
	        android:textSize="@dimen/txt_s5"
	        android:textColor="@color/t2"/>
    </RelativeLayout>

</RelativeLayout>
