<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/page_rankstock_tableheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_H_listhead"
        android:paddingLeft="@dimen/len_M_horizontal"
        android:paddingRight="@dimen/len_M_horizontal" >

        <TextView
            android:id="@+id/page_rankstock_item_namecode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="股票"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s4" />

        <TextView
            android:id="@+id/page_rankstock_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="最新价"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s4" />

        <TextView
            android:id="@+id/page_rankstock_item_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="涨跌幅"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s4" />
    </RelativeLayout>

    <View
        android:id="@+id/page_rankstock_header_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/b7" />

    <ListView
        android:id="@+id/page_rankstock_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:overScrollMode="never"
        android:divider="@drawable/img_line_divider"
        android:dividerHeight="0.5dip"
        android:listSelector="@android:color/transparent" >
    </ListView>

</LinearLayout>