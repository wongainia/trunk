<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_H_listitem_stocklist"
    android:background="@drawable/selector_list_item"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="@dimen/len_H_listitem_stocklist"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_iv_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="23dp"
        android:paddingRight="15dp"
        android:src="@drawable/selector_checkbox" />

    <TextView
        android:id="@+id/item_tv_stockname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上证指数"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6" />

    <TextView
        android:id="@+id/item_tv_stockcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="000001"
        android:textColor="@color/t3"
        android:textSize="@dimen/txt_s4" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/item_iv_warning"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scaleType="center"
        android:src="@drawable/selector_warning_icon" />

    <ImageView
        android:id="@+id/dragdroplistview_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="32dp"
        android:scaleType="center"
        android:src="@drawable/img_edit_optional_stick" />

</LinearLayout>