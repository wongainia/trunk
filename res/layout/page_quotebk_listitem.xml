<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:paddingLeft="22dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_tv_stockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s6" />

        <TextView
            android:id="@+id/item_tv_stockcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/t4"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="--"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/item_tv_zdf"
        android:layout_width="@dimen/zdf_bg_width"
        android:layout_height="@dimen/zdf_bg_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/t8"
        android:textSize="@dimen/txt_s6" />

</RelativeLayout>
