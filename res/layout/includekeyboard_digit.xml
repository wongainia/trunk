<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/keyboard_bg"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv11"
                style="@style/key_text_number_600"
                android:background="@drawable/keyboard_bg_gray"
                android:text="600" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv12"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="1" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv13"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="2" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv14"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv15"
            style="@style/key_vol"
            android:layout_height="@dimen/key_item_h"
            android:background="@drawable/keyboard_bg_gray"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_key_del" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv21"
                style="@style/key_text_number_600"
                android:background="@drawable/keyboard_bg_gray"
                android:text="000" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv22"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="4" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv23"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="5" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv24"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="6" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv25"
                style="@style/key_text_fn"
                android:background="@drawable/keyboard_bg_gray"
                android:text="清空" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv31"
                style="@style/key_text_number_600"
                android:background="@drawable/keyboard_bg_gray"
                android:text="002" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv32"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="7" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv33"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="8" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv34"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="9" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv35"
                style="@style/key_text_fn"
                android:background="@drawable/keyboard_bg_gray"
                android:text="隐藏" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv41"
                style="@style/key_text_number_600"
                android:background="@drawable/keyboard_bg_gray"
                android:text="300" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv42"
                style="@style/key_text_number_600"
                android:background="@drawable/keyboard_bg_gray"
                android:text="ABC"
                android:textColor="@color/t8"
                android:textSize="@dimen/txt_s9" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv43"
                style="@style/key_text"
                android:background="@drawable/keyboard_bg_black"
                android:text="0" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv44"
                style="@style/key_text_fn"
                android:background="@drawable/keyboard_bg_gray"
                android:text="中文" />
        </LinearLayout>

        <LinearLayout style="@style/key_vol" >

            <TextView
                android:id="@+id/tv45"
                style="@style/key_text_fn"
                android:background="@drawable/keyboard_bg_gray"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>