<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="456">
            
            <TextView 
		        android:id="@+id/page_headline_listitem_tv_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="16dp"
		        android:layout_marginTop="24dp"
		        android:layout_marginRight="16dp"
		        android:maxLines="2"
		        android:textSize="@dimen/txt_s6"
		        android:textColor="@color/t1"/>
            
            <View 
                android:id="@+id/view_bottom_left_margin"
                android:layout_width="16dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"/>
            
            <TextView 
                android:id="@+id/page_headline_listitem_tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_bottom_left_margin"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="8dp"
                android:textSize="@dimen/txt_s3"
                android:textColor="@color/t3"/>
            
            <TextView 
		        android:id="@+id/page_headline_listitem_tv_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/page_headline_listitem_tv_group"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="16dp"
		        android:layout_marginRight="8dp"
		        android:textSize="@dimen/txt_s3"
		        android:textColor="@color/t3"/>
		    
		    <ImageView 
		        android:id="@+id/page_headline_listitem_img_tread"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/page_headline_listitem_tv_time"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="16dp"
		        android:layout_marginRight="12dp"/>
		    
		    <ImageView 
		        android:id="@+id/page_headline_listitem_img_playstatus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@id/page_headline_listitem_img_tread"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="16dp"
		        android:src="@drawable/img_news_horn_playing"
		        android:visibility="invisible"/>
		    
		    <TextView 
		        android:id="@+id/page_headline_listitem_tv_comments"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="8dp"
		        android:padding="8dp"
		        android:drawablePadding="4dp"
		        android:drawableLeft="@drawable/img_news_comments"
		        android:layout_alignBaseline="@id/page_headline_listitem_tv_time"
		        android:visibility="gone"
		        android:textSize="@dimen/txt_s1"
		        android:textColor="@color/t5"/>
		    
		    <ImageView 
		        android:id="@+id/page_headline_listitem_img_share"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="8dp"
		        android:layout_toLeftOf="@id/page_headline_listitem_tv_comments"
		        android:layout_marginBottom="8dp"
		        android:layout_alignParentBottom="true"
		        android:visibility="gone"/>
		    
        </RelativeLayout>
        
        <com.android.volley.toolbox.NetworkImageView 
	        android:id="@+id/page_headline_listitem_img_icon"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="187"
	        android:paddingTop="17dp"
	        android:paddingBottom="17dp"
	        android:layout_marginRight="17dp"
	        android:scaleType="fitCenter"/>
    </LinearLayout>
    
</RelativeLayout>
