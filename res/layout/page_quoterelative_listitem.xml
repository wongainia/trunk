<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item" >
    
    <TextView 
        android:id="@+id/page_quoterelative_listitem_tv_bkname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:paddingLeft="22dp"
        android:gravity="center_vertical"
        android:text="金融"
        android:textSize="@dimen/txt_s6"
        android:textColor="@color/t1"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView 
            android:id="@+id/page_quoterelative_listitem_tv_stockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浦发银行"
            android:textSize="@dimen/txt_s4"
            android:textColor="@color/t3"/>
        
        <TextView 
            android:id="@+id/page_quoterelative_listitem_tv_stockzdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10.00%"
            android:textSize="@dimen/txt_s4"
            android:textColor="@color/t3"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/page_quoterelative_listitem_tv_bkzdf"
        android:layout_width="@dimen/zdf_bg_width"
        android:layout_height="@dimen/zdf_bg_height"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/t8"
        android:textSize="@dimen/txt_s6"/>

</RelativeLayout>
