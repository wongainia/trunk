<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_H_listsection"
    android:background="@color/b2" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/b7" />

    <TextView
        android:id="@+id/page_quotation_list_item_section_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_H_listsection"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:text="--"
        android:textColor="@color/t3"
        android:textSize="@dimen/txt_s3" />

    <LinearLayout
        android:id="@+id/page_quotation_list_item_section_layout_more"
        android:layout_width="68dp"
        android:layout_height="@dimen/len_H_listsection"
        android:layout_alignParentRight="true"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/page_quotation_list_item_section_tv_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c3"
            android:gravity="center"
            android:text="@string/more"
            android:textColor="@color/t8"
            android:textSize="@dimen/txt_s3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/b7" />

</RelativeLayout>