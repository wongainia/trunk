<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_H_listitem_stocklist"
    android:gravity="center_vertical"
    android:minHeight="@dimen/len_H_listitem_stocklist"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/page_edit_position_listitem_layout_check"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="102"
        android:gravity="center_vertical"
        android:paddingLeft="24dp" >

        <ImageView
            android:id="@+id/page_edit_position_listitem_img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_check_checked" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="146"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/page_edit_position_listitem_tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浦发银行"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s6" />

        <TextView
            android:id="@+id/page_edit_position_listitem_tv_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="600000"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="146"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <EditText
            android:id="@+id/page_edit_position_listitem_et_position"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/shape_et_bg_normal"
            android:gravity="center_vertical|right"
            android:inputType="number"
            android:paddingRight="8dp"
            android:text="1000"
            android:textColor="@color/t1"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="146"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <EditText
            android:id="@+id/page_edit_position_listitem_et_cost"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/shape_et_bg_normal"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal"
            android:paddingRight="8dp"
            android:text="1000"
            android:textColor="@color/t1"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/page_edit_position_listitem_layout_alert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="102"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/page_edit_position_listitem_img_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_alert_unset" />
    </LinearLayout>

</LinearLayout>