<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_bg_idea">
        
        <EditText 
            android:id="@+id/page_groupheader_layout_idea_et_idea"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_transparent"
            android:padding="12dp"
            android:enabled="false"
            android:gravity="top|left"
            android:lineSpacingMultiplier="1.3"
            android:textCursorDrawable="@drawable/shape_et_cursor_index"
            android:textSize="@dimen/txt_s4"
            android:textColor="@drawable/selector_et_color"/>
        
        <ImageView 
            android:id="@+id/page_groupheader_layout_idea_iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_group_edit"
            android:padding="16dp"/>
        
    </RelativeLayout>
    
</RelativeLayout>
