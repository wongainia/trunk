<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/cn.emoney.sky.fixemojtv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="83dp"
    android:paddingRight="@dimen/len_M_horizontal"
    android:paddingTop="8dp" >

    <cn.emoney.sky.fixcmojitv.EmojiconTextView
        android:id="@+id/item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s4"
        emojicon:emojiconSize="19dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_comment_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/c3"
            android:textSize="@dimen/txt_s4" />

        <TextView
            android:id="@+id/item_comment_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 回复 "
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s4" />

        <TextView
            android:id="@+id/item_comment_dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c3"
            android:textSize="@dimen/txt_s4" />

        <TextView
            android:id="@+id/item_comment_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

</RelativeLayout>