<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s7" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1.5dip"
            android:gravity="center"
            android:text="message"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s6" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_h"
        android:background="@color/b5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:layout_weight="1"
            android:background="@drawable/selector_alertdialog_left"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/c4"
            android:textSize="@dimen/txt_s5" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:background="@color/b5" />

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/custom_dialog_btn_heigt"
            android:layout_weight="1"
            android:background="@drawable/selector_alertdialog_right"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c4"
            android:textSize="@dimen/txt_s5" />
    </LinearLayout>

</LinearLayout>