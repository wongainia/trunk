<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:minHeight="@dimen/len_H_listitem_stocklist"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="153"
        android:gravity="center"
        android:textColor="@color/t3"
        android:textSize="@dimen/txt_s6" />

    <View
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="35" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="183"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s5" />

        <TextView
            android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/t4"
            android:textSize="@dimen/txt_s4" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reset_position"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="136"
        android:background="@drawable/selector_list_item"
        android:gravity="center_vertical|right"
        android:paddingRight="14dp"
        android:text="调仓"
        android:textColor="@color/c4"
        android:textSize="@dimen/txt_s5" />

    <TextView
        android:id="@+id/tv_clear_position"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="136"
        android:background="@drawable/selector_list_item"
        android:gravity="center_vertical|left"
        android:paddingLeft="14dp"
        android:text="平仓"
        android:textColor="@color/c4"
        android:textSize="@dimen/txt_s5" />

</LinearLayout>
