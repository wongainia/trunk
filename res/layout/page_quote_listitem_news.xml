<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
	    android:id="@+id/page_quote_listitem_layout"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/len_H_listitem_singleline"
	    android:background="@drawable/selector_list_item" >
	
	    <TextView
	        android:id="@+id/page_quote_listitem_tv_time"
	        android:layout_width="54dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textColor="@color/c3"
	        android:textSize="@dimen/txt_s3" />
	
	    <TextView
	        android:id="@+id/page_quote_listitem_tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_toRightOf="@id/page_quote_listitem_tv_time"
	        android:paddingRight="12dp"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:textColor="@color/t1"
	        android:textSize="@dimen/txt_s6" />
	    
	    <View 
	        android:id="@+id/page_quote_listitem_img_divider"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/img_light_divider_line"/>
	
	</RelativeLayout>
	
    <View 
        android:id="@+id/page_quote_listitem_blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_H_listitem_singleline"
        android:visibility="gone"/>
    
</RelativeLayout>


