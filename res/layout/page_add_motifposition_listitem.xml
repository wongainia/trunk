<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv_stock_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="198"
        android:gravity="center"
        android:textSize="@dimen/txt_s6"
        android:textColor="@drawable/selector_textcolor_searchresult"/>
    
    <TextView 
        android:id="@+id/tv_stock_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="206"
        android:gravity="center"
        android:textSize="@dimen/txt_s6"
        android:textColor="@drawable/selector_textcolor_searchresult"/>
    
    <View 
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="121"/>
    
    <ImageView 
        android:layout_width="0dp"
        android:layout_height="@dimen/len_H_listitem_stocklist"
        android:layout_weight="118"
        android:src="@drawable/img_list_more"
        android:scaleType="centerInside"/>

</LinearLayout>
