<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_H_listitem_stocklist"
    android:background="@drawable/selector_list_item"
    android:gravity="center_vertical"
    android:minHeight="@dimen/len_H_listitem_stocklist"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_tv_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="124"
        android:gravity="center"
        android:text="30%"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="211"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_tv_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国重工"
            android:textColor="@color/t1"
            android:textSize="@dimen/txt_s5" />

        <TextView
            android:id="@+id/item_tv_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="600025"
            android:textColor="@color/t3"
            android:textSize="@dimen/txt_s3" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="77"
        android:gravity="center"
        android:text="12.7"
        android:textColor="@color/t1"
        android:textSize="@dimen/txt_s6"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="230" >

        <TextView
            android:id="@+id/item_tv_4"
            android:layout_width="72dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+3.12%"
            android:textColor="@color/t8"
            android:textSize="@dimen/txt_s5" >
        </TextView>
    </FrameLayout>

</LinearLayout>