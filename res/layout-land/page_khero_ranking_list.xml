<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/lLayout_bg"
        android:layout_width="422dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/b4" >

        <WebView
            android:id="@+id/kherorank_wv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/kherorank_pb_busy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/loading_layout_red" />
    </FrameLayout>

    <ImageView
        android:id="@+id/kherorank_imgbtn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@drawable/img_khero_ranklist_colose" />

</FrameLayout>